@{
    ViewBag.Title = "Introduce";
    Layout = "~/Views/_LayoutWebsite.cshtml";
}
<section class="clearfix">
    <div class="wrap-breadcrumb">
        <div class="outer-breadcrumb">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 ">
                        <ol class="breadcrumb breadcrumb-arrow">
                            <li><a href="/" target="_self">Trang chủ</a></li>
                            <li class="active"><span>Giới thiệu </span></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div id="content" class="col-md-12 col-sm-12 col-xs-12">
            </div>
        </div>
    </div>
    <script>
        function loadData() {
            $.ajax({
                url: '/Website/IntroduceAjax',
                type: 'GET',
                dataType: 'json',
                success: function (result) {
                    var stringHtml = '';
                    stringHtml += '<h2>' + result.introduce_title + '</h2>';
                    stringHtml += '<div class="main-content">' + result.introduce_content + '</div>';
                    $('#content').html(stringHtml);
                },
                error: function () {
                    alert('Co loi xay ra!');
                }
            });
        }
        loadData();
    </script>
</section>


